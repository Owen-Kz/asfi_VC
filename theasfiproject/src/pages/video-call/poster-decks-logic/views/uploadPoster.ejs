Upload Poster START -->
<section>
	<div class="container">
		<div class="row">
			<div class="col-md-8 mx-auto text-center">
				<h4>Upload Poster</h4>
				<!-- Content -->
				<a href="" class="text-center">Preview your poster </a>
			</div>
		</div>
        <br>

		<div class="card-body">
		<!-- Step 1 content START -->
		<div class="content">
			<!-- Title -->
			

			<hr> <!-- Divider -->

			<!-- Basic information START -->
			<div class="row g-4">
				<!-- Event title -->
				<div class="col-12">
					<label class="form-label">Title*</label>
					<input class="form-control" type="text" name="eventTitle" id="eventTitle"  placeholder="Enter event title">
				</div>

				<!-- Event organizer -->
				<div class="col-12">
					<label class="form-label">Authors*</label>
					<input class="form-control" type="text" name="eventOrganizer" id="eventOrganizer" value="">
				</div>

				<!-- Short description -->
				<div class="col-12">
					<label class="form-label">Abstract</label>
					<textarea class="form-control" name="shortDescription" id="shortDescription" rows="10" placeholder="Enter keywords"></textarea>
				</div>

				<!-- Presenter Name -->
				<div class="col-12">
					<label class="form-label">Presenter Name*</label>
					<input class="form-control" type="text" name="presenterName" id="presenterName" value="">
				</div>

				<!-- Presenter Email -->
				<div class="col-12">
					<label class="form-label">Presenter Email Address*</label>
					<input class="form-control" type="text" name="presenterEmail" id="presenterEmail" value="">
				</div>

				<div class="col-12">
					<label class="form-label">Your Poster</label>
					<p>Please consider accessibility when making your poster PDF, by ensuring text is selectable and images are described (for screen readers).</p>
				</div>

				<div class="col-12">
					<label class="form-label">Upload a PDF now (25Mb limit)</label>
					<div class="input-group mb-3">
						<input type="file" class="form-control" id="PosterPDF">
						<label class="input-group-text">.pdf</label>
					</div>
				</div>

          
				

				
				

				<!-- Step 1 button -->
				<div class="d-flex justify-content-end mt-3">
					<button type="button" class="btn btn-primary next-btn mb-0">Submit</button>
				</div>
			</div>
			<!-- Basic information START -->
		</div>
		<!-- Step 1 content END -->
	</div>

		
